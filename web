  <!-- Scripts -->
  <script>
    // Background Slideshow
    const slides = document.querySelectorAll('.slideshow img');
    let slideIndex = 0;
    setInterval(() => {
      slides[slideIndex].classList.remove('active');
      slideIndex = (slideIndex + 1) % slides.length;
      slides[slideIndex].classList.add('active');
    }, 3000);

    // Quotes Slideshow
    const quotes = [
      "“The future belongs to those who believe in the beauty of their dreams.” – Eleanor Roosevelt",
      "“Your time is limited, so don’t waste it living someone else’s life.” – Steve Jobs",
      "“Success is not final, failure is not fatal: It is the courage to continue that counts.” – Winston Churchill"
    ];
    let quoteIndex = 0;
    const quoteEl = document.getElementById('quotes');
    quoteEl.textContent = quotes[0];
    setInterval(() => {
      quoteEl.textContent = quotes[quoteIndex];
      quoteIndex = (quoteIndex + 1) % quotes.length;
    }, 3000);

    // Redirect "Take the Test" button
    document.getElementById('testBtn').addEventListener('click', () => {
      window.open(
        'https://docs.google.com/forms/d/e/1FAIpQLSfJhiTNI8a75cssZeFI7yvRbaCRuTO8ytqndMsejSIQ1Fw5lw/viewform?pli=1',
        '_blank'
      );
    });
  </script>
