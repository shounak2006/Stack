#include <stdio.h>
#include <stdlib.h>

int main() {
    int ch, top = -1, max = 0;

    printf("Enter the max size of the stack: ");
    scanf("%d", &max);

    int arr[max];

    while (1) {
        printf("\n--- Stack Menu ---\n");
        printf("1) Push\n");
        printf("2) Pop\n");
        printf("3) Peek\n");
        printf("4) Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: {
                int ele;
                if (top == max - 1) {
                    printf("Stack Overflow! Cannot push more elements.\n");
                } else {
                    printf("Enter the element to push: ");
                    scanf("%d", &ele);
                    arr[++top] = ele;
                    printf("%d pushed onto the stack.\n", ele);
                }
                break;
            }

            case 2:
                if (top == -1) {
                    printf("Stack Underflow! Nothing to pop.\n");
                } else {
                    printf("Popped element: %d\n", arr[top--]);
                }
                break;

            case 3:
                if (top == -1) {
                    printf("Stack is empty.\n");
                } else {
                    printf("Top element is: %d\n", arr[top]);
                }
                break;

            case 4:
                printf("Exiting program.\n");
                exit(0);
                break;

            default:
                printf("Invalid choice! Please select 1 to 4.\n");
        }
    }
    return 0;
}
